{
  "compilerOptions": {

    "module": "commonjs",                                
    "rootDir": "./src",                                  
    "baseUrl": "./",                                  
    "typeRoots": ["./node_modules/@types", "./src/types"],                                  
    "outDir": "./dist",                                   
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,           
    "strict": true,                                      

    
    "skipLibCheck": true                                 
  },
  "include": ["src/**/*"],        
  "exclude": ["node_modules"] 
}
